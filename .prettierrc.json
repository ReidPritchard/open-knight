{
	"$schema": "https://json.schemastore.org/prettierrc",
	"useTabs": true,
	"tabWidth": 2,
	"semi": true,
	"singleQuote": false,
	"quoteProps": "preserve",
	"trailingComma": "all",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "always",
	"htmlWhitespaceSensitivity": "css",
	"vueIndentScriptAndStyle": false,
	"singleAttributePerLine": true,
	"plugins": ["prettier-plugin-vue"],
	"overrides": [
		{
			"files": "*.vue",
			"options": {
				"parser": "vue",
				"htmlWhitespaceSensitivity": "ignore"
			}
		},
		{
			"files": "*.json",
			"options": {
				"trailingComma": "all"
			}
		},
		{
			"files": "package.json",
			"options": {
				"trailingComma": "none"
			}
		}
	]
}
